{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "defaultValue": "quizzer-microservices",
      "metadata": {
        "description": "Name for the container group"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "dockerRegistry": {
      "type": "string",
      "metadata": {
        "description": "Docker registry URL (e.g., your-registry.azurecr.io)"
      }
    },
    "imageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Docker image tag"
      }
    },
    "mongodbUri": {
      "type": "securestring",
      "metadata": {
        "description": "MongoDB connection string"
      }
    },
    "redisUrl": {
      "type": "securestring",
      "metadata": {
        "description": "Redis connection string"
      }
    },
    "jwtSecret": {
      "type": "securestring",
      "metadata": {
        "description": "JWT secret key"
      }
    },
    "geminiApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Gemini API key"
      }
    },
    "groqApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Groq API key"
      }
    }
  },
  "variables": {
    "containerGroupName": "[parameters('containerGroupName')]",
    "authServiceName": "auth-service",
    "quizServiceName": "quiz-service",
    "aiServiceName": "ai-service",
    "submissionServiceName": "submission-service",
    "analyticsServiceName": "analytics-service"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-09-01",
      "name": "[variables('containerGroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "containers": [
          {
            "name": "[variables('authServiceName')]",
            "properties": {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-auth-service:', parameters('imageTag'))]",
              "ports": [
                {
                  "port": 3001,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3001"
                },
                {
                  "name": "MONGODB_URI",
                  "secureValue": "[parameters('mongodbUri')]"
                },
                {
                  "name": "REDIS_URL",
                  "secureValue": "[parameters('redisUrl')]"
                },
                {
                  "name": "JWT_SECRET",
                  "secureValue": "[parameters('jwtSecret')]"
                },
                {
                  "name": "JWT_EXPIRES_IN",
                  "value": "24h"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 1
                }
              }
            }
          },
          {
            "name": "[variables('aiServiceName')]",
            "properties": {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-ai-service:', parameters('imageTag'))]",
              "ports": [
                {
                  "port": 3003,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3003"
                },
                {
                  "name": "MONGODB_URI",
                  "secureValue": "[parameters('mongodbUri')]"
                },
                {
                  "name": "REDIS_URL",
                  "secureValue": "[parameters('redisUrl')]"
                },
                {
                  "name": "GEMINI_API_KEY",
                  "secureValue": "[parameters('geminiApiKey')]"
                },
                {
                  "name": "GROQ_API_KEY",
                  "secureValue": "[parameters('groqApiKey')]"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 2
                }
              }
            }
          },
          {
            "name": "[variables('quizServiceName')]",
            "properties": {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-quiz-service:', parameters('imageTag'))]",
              "ports": [
                {
                  "port": 3002,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3002"
                },
                {
                  "name": "MONGODB_URI",
                  "secureValue": "[parameters('mongodbUri')]"
                },
                {
                  "name": "REDIS_URL",
                  "secureValue": "[parameters('redisUrl')]"
                },
                {
                  "name": "AI_SERVICE_URL",
                  "value": "[concat('http://localhost:3003')]"
                },
                {
                  "name": "AUTH_SERVICE_URL",
                  "value": "[concat('http://localhost:3001')]"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 1
                }
              }
            }
          },
          {
            "name": "[variables('submissionServiceName')]",
            "properties": {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-submission-service:', parameters('imageTag'))]",
              "ports": [
                {
                  "port": 3004,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3004"
                },
                {
                  "name": "MONGODB_URI",
                  "secureValue": "[parameters('mongodbUri')]"
                },
                {
                  "name": "REDIS_URL",
                  "secureValue": "[parameters('redisUrl')]"
                },
                {
                  "name": "AI_SERVICE_URL",
                  "value": "[concat('http://localhost:3003')]"
                },
                {
                  "name": "QUIZ_SERVICE_URL",
                  "value": "[concat('http://localhost:3002')]"
                },
                {
                  "name": "AUTH_SERVICE_URL",
                  "value": "[concat('http://localhost:3001')]"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 1
                }
              }
            }
          },
          {
            "name": "[variables('analyticsServiceName')]",
            "properties": {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-analytics-service:', parameters('imageTag'))]",
              "ports": [
                {
                  "port": 3005,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3005"
                },
                {
                  "name": "MONGODB_URI",
                  "secureValue": "[parameters('mongodbUri')]"
                },
                {
                  "name": "REDIS_URL",
                  "secureValue": "[parameters('redisUrl')]"
                },
                {
                  "name": "AUTH_SERVICE_URL",
                  "value": "[concat('http://localhost:3001')]"
                },
                {
                  "name": "QUIZ_SERVICE_URL",
                  "value": "[concat('http://localhost:3002')]"
                },
                {
                  "name": "SUBMISSION_SERVICE_URL",
                  "value": "[concat('http://localhost:3004')]"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 1
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Always",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "TCP",
              "port": 3001
            },
            {
              "protocol": "TCP",
              "port": 3002
            },
            {
              "protocol": "TCP",
              "port": 3003
            },
            {
              "protocol": "TCP",
              "port": 3004
            },
            {
              "protocol": "TCP",
              "port": 3005
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "containerGroupFQDN": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerGroupName'))).ipAddress.fqdn]"
    },
    "containerGroupIP": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerGroupName'))).ipAddress.ip]"
    }
  }
}

