{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerAppEnvName": {
      "type": "string",
      "defaultValue": "quizzer-env",
      "metadata": {
        "description": "Name of the Container App Environment"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "dockerRegistry": {
      "type": "string",
      "metadata": {
        "description": "Docker registry URL"
      }
    },
    "registryUsername": {
      "type": "string",
      "metadata": {
        "description": "Registry username"
      }
    },
    "registryPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Registry password"
      }
    },
    "mongodbUri": {
      "type": "securestring",
      "metadata": {
        "description": "MongoDB connection string"
      }
    },
    "redisUrl": {
      "type": "securestring",
      "metadata": {
        "description": "Redis connection string"
      }
    },
    "jwtSecret": {
      "type": "securestring",
      "metadata": {
        "description": "JWT secret key"
      }
    },
    "geminiApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Gemini API key"
      }
    },
    "groqApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Groq API key"
      }
    }
  },
  "variables": {
    "logAnalyticsWorkspaceName": "[concat(parameters('containerAppEnvName'), '-logs')]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2021-06-01",
      "name": "[variables('logAnalyticsWorkspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2022-03-01",
      "name": "[parameters('containerAppEnvName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
      ],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))).customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName')), '2021-06-01').primarySharedKey]"
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2022-03-01",
      "name": "auth-service",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 3001,
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[parameters('dockerRegistry')]",
              "username": "[parameters('registryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('registryPassword')]"
            },
            {
              "name": "mongodb-uri",
              "value": "[parameters('mongodbUri')]"
            },
            {
              "name": "redis-url",
              "value": "[parameters('redisUrl')]"
            },
            {
              "name": "jwt-secret",
              "value": "[parameters('jwtSecret')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-auth-service:latest')]",
              "name": "auth-service",
              "env": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3001"
                },
                {
                  "name": "MONGODB_URI",
                  "secretRef": "mongodb-uri"
                },
                {
                  "name": "REDIS_URL",
                  "secretRef": "redis-url"
                },
                {
                  "name": "JWT_SECRET",
                  "secretRef": "jwt-secret"
                },
                {
                  "name": "JWT_EXPIRES_IN",
                  "value": "24h"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 3
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2022-03-01",
      "name": "ai-service",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 3003,
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[parameters('dockerRegistry')]",
              "username": "[parameters('registryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('registryPassword')]"
            },
            {
              "name": "mongodb-uri",
              "value": "[parameters('mongodbUri')]"
            },
            {
              "name": "redis-url",
              "value": "[parameters('redisUrl')]"
            },
            {
              "name": "gemini-api-key",
              "value": "[parameters('geminiApiKey')]"
            },
            {
              "name": "groq-api-key",
              "value": "[parameters('groqApiKey')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-ai-service:latest')]",
              "name": "ai-service",
              "env": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3003"
                },
                {
                  "name": "MONGODB_URI",
                  "secretRef": "mongodb-uri"
                },
                {
                  "name": "REDIS_URL",
                  "secretRef": "redis-url"
                },
                {
                  "name": "GEMINI_API_KEY",
                  "secretRef": "gemini-api-key"
                },
                {
                  "name": "GROQ_API_KEY",
                  "secretRef": "groq-api-key"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "cpu": 1,
                "memory": "2Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 5
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2022-03-01",
      "name": "quiz-service",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]",
        "[resourceId('Microsoft.App/containerApps', 'auth-service')]",
        "[resourceId('Microsoft.App/containerApps', 'ai-service')]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 3002,
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[parameters('dockerRegistry')]",
              "username": "[parameters('registryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('registryPassword')]"
            },
            {
              "name": "mongodb-uri",
              "value": "[parameters('mongodbUri')]"
            },
            {
              "name": "redis-url",
              "value": "[parameters('redisUrl')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-quiz-service:latest')]",
              "name": "quiz-service",
              "env": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3002"
                },
                {
                  "name": "MONGODB_URI",
                  "secretRef": "mongodb-uri"
                },
                {
                  "name": "REDIS_URL",
                  "secretRef": "redis-url"
                },
                {
                  "name": "AI_SERVICE_URL",
                  "value": "https://ai-service.internal"
                },
                {
                  "name": "AUTH_SERVICE_URL",
                  "value": "https://auth-service.internal"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 3
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2022-03-01",
      "name": "submission-service",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]",
        "[resourceId('Microsoft.App/containerApps', 'auth-service')]",
        "[resourceId('Microsoft.App/containerApps', 'ai-service')]",
        "[resourceId('Microsoft.App/containerApps', 'quiz-service')]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 3004,
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[parameters('dockerRegistry')]",
              "username": "[parameters('registryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('registryPassword')]"
            },
            {
              "name": "mongodb-uri",
              "value": "[parameters('mongodbUri')]"
            },
            {
              "name": "redis-url",
              "value": "[parameters('redisUrl')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-submission-service:latest')]",
              "name": "submission-service",
              "env": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3004"
                },
                {
                  "name": "MONGODB_URI",
                  "secretRef": "mongodb-uri"
                },
                {
                  "name": "REDIS_URL",
                  "secretRef": "redis-url"
                },
                {
                  "name": "AI_SERVICE_URL",
                  "value": "https://ai-service.internal"
                },
                {
                  "name": "QUIZ_SERVICE_URL",
                  "value": "https://quiz-service.internal"
                },
                {
                  "name": "AUTH_SERVICE_URL",
                  "value": "https://auth-service.internal"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 3
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2022-03-01",
      "name": "analytics-service",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]",
        "[resourceId('Microsoft.App/containerApps', 'auth-service')]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('containerAppEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 3005,
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[parameters('dockerRegistry')]",
              "username": "[parameters('registryUsername')]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[parameters('registryPassword')]"
            },
            {
              "name": "mongodb-uri",
              "value": "[parameters('mongodbUri')]"
            },
            {
              "name": "redis-url",
              "value": "[parameters('redisUrl')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "image": "[concat(parameters('dockerRegistry'), '/quizzer-analytics-service:latest')]",
              "name": "analytics-service",
              "env": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3005"
                },
                {
                  "name": "MONGODB_URI",
                  "secretRef": "mongodb-uri"
                },
                {
                  "name": "REDIS_URL",
                  "secretRef": "redis-url"
                },
                {
                  "name": "AUTH_SERVICE_URL",
                  "value": "https://auth-service.internal"
                },
                {
                  "name": "QUIZ_SERVICE_URL",
                  "value": "https://quiz-service.internal"
                },
                {
                  "name": "SUBMISSION_SERVICE_URL",
                  "value": "https://submission-service.internal"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "info"
                },
                {
                  "name": "CORS_ORIGIN",
                  "value": "*"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 3
          }
        }
      }
    }
  ],
  "outputs": {
    "authServiceUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', 'auth-service')).configuration.ingress.fqdn)]"
    },
    "quizServiceUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', 'quiz-service')).configuration.ingress.fqdn)]"
    },
    "aiServiceUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', 'ai-service')).configuration.ingress.fqdn)]"
    },
    "submissionServiceUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', 'submission-service')).configuration.ingress.fqdn)]"
    },
    "analyticsServiceUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', 'analytics-service')).configuration.ingress.fqdn)]"
    }
  }
}

