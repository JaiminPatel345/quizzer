# Environment template for all services
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/quiz_app
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AI Services
GROQ_API_KEY=your-groq-api-key
GEMINI_API_KEY=your-gemini-api-key

# Email (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Service Ports
AUTH_SERVICE_PORT=3001
QUIZ_SERVICE_PORT=3002
AI_SERVICE_PORT=3003
SUBMISSION_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# Future Load Balancer
NGINX_PORT=80
API_GATEWAY_PORT=3000


AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=quizzer-rg
AZURE_LOCATION=eastus
AZURE_CONTAINER_REGISTRY=quizzerregistry
AZURE_CONTAINER_APP_ENV=quizzer-env
