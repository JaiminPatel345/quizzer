# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-quiz-app
MONGODB_TEST_URI=mongodb://localhost:27017/ai-quiz-test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret

# AI Configuration - Groq
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama3-8b-8192

# AI Configuration - Gemini (Fallback)
GOOGLE_API_KEY=your-google-ai-api-key-here
GEMINI_MODEL=gemini-pro

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM_NAME=AI Quiz App
EMAIL_FROM_ADDRESS=your-email@gmail.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_QUIZ=3600
CACHE_TTL_LEADERBOARD=300
CACHE_TTL_USER_HISTORY=1800

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
